        "# **Step 2: Match-Level Analysis**\n",
        "\n",
        "\n",
        "```\n",
        "# Total seasons\n",
        "seasons = matches['season'].nunique()\n",
        "season_list = matches['season'].unique()\n",
        "\n",
        "# Matches per season\n",
        "matches_per_season = matches['season'].value_counts().sort_index()\n",
        "\n",
        "# Wins by team (top 10)\n",
        "wins_by_team = matches['winner'].value_counts().head(10)\n",
        "\n",
        "# Toss decisions\n",
        "toss_decisions = matches['toss_decision'].value_counts()\n",
        "\n",
        "# Venues (top 10)\n",
        "venues = matches['venue'].value_counts().head(10)\n",
        "\n",
        "(seasons, season_list, matches_per_season, wins_by_team, toss_decisions, venues)\n",
